متغير حقل_المستخدم=""؛
متغير الكلمةالحالية=""؛
متغير رقم_الكلمةالحالية=0؛
متغير كلمةالمستخدم؛

مهمة قيمة_الكلمةالحالية() {
ارجاع الكلمةالحالية؛
}

/*
مهمة اختيارحقل(الحالي) {
حقل_المستخدم= "حرف" + الحالي؛
 }

مهمة الحقل_الحالي() {
ارجاع حقل_المستخدم؛
}
*/
مهمة التحقق(الموقع,الحرف) {
كلمةالمستخدم.تعيين(الموقع, الحرف)؛
عندما(الكلمةالحالية==كلمةالمستخدم.الكل)
ارجاع متحقق؛
غيرذلك ارجاع غيرمتحقق؛
}


مهمة كلمةجديدة() {

متغير ق=قاموس()؛

عندما(رقم_الكلمةالحالية>=الكلمات.الطول) {
رقم_الكلمةالحالية=0؛
حقل_المستخدم=""؛
الكلمةالحالية=""؛
ق.اضافة("الكلمة","انتهت الكلمات")؛
ق.اضافة("الصورة","عرب.png")؛
ارجاع ق؛
}

متغير قيمة_الرجوع=مصفوفة()؛
متغير الصورة=الكلمات.العنصر(رقم_الكلمةالحالية)؛

متغير منطقةالحروف= منطقة()؛
متغير طول_الكلمة_الحالية=نص.الطول(الكلمات.العنصر(رقم_الكلمةالحالية))؛
متغير الرقم_عشوائي=رياضيات.رقم_عشوائي(0,طول_الكلمة_الحالية-1)؛
متغير الحرف_العشوائي=نص.الحروف(الكلمات.العنصر(رقم_الكلمةالحالية),الرقم_عشوائي,1)؛
الكلمةالحالية=الكلمات.العنصر(رقم_الكلمةالحالية)؛
 كلمةالمستخدم = مصفوفة(طول_الكلمة_الحالية)؛
كلمةالمستخدم.تعيين(الرقم_عشوائي, الحرف_العشوائي)؛
منذ(متغير أ=0؛أ<طول_الكلمة_الحالية؛أ++)
{
متغير ن=حقل_نصي()؛
ن.المعرف="حرف"+أ؛
ن.خاصية("النوع","نص")؛
ن.خاصية("الطول","3")؛
ن.خاصية("قراءةفقط","نعم")؛
 ن.عندالنقر="تحديد(" + أ + ")"؛
 عندما(الرقم_عشوائي==أ) 
ن.خاصية("المحتوى",الحرف_العشوائي)؛ 
	//ن.النص=نص.الحروف(الكلمات.العنصر(رقم_الكلمةالحالية),الحرف_العشوائي,1)؛

 منطقةالحروف.اضف(ن)؛
 
}

رقم_الكلمةالحالية++؛


ق.اضافة("الكلمة",منطقةالحروف)؛
ق.اضافة("الصورة",الصورة + ".jpg")؛
ارجاع ق؛
}
