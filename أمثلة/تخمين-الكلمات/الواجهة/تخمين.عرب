مهمة تنفيذ1(القيمة){

متغير ج=جسون(القيمة)؛

 متغير النتيجة=الصفحة.العنصر("منطقةالكلمة")؛
النتيجة.المحتوى=ج.العنصر("الكلمة")؛
 متغير الصورة=الصفحة.العنصر("منطقةالصورة")؛

 الصورة.المصدر=ج.العنصر("الصورة")؛
}

متغير الحقل_المحدد؛
متغير رقم_الحقل_المحدد=""؛
متغير الكلمةالحالية=""؛

مهمة ابدأ(){
متغير م=متغيرات_المهمة()؛
//النتيجة.المحتوى= مهمةخدمة("كلمةجديدة",م.المحتوى()) ؛
  مهمةخدمة("كلمةجديدة",م.المحتوى(),تنفيذ1) ؛

 //الكلمةالحالية= مهمةخدمة("قيمة_الكلمةالحالية",م.المحتوى()) ؛

 }
 
 مهمة تحديد(ع){
 رقم_الحقل_المحدد=ع؛
 الحقل_المحدد="حرف" +ع؛
 }

مهمة تنفيذ2(القيمة){
عندما(القيمة=="متحقق"){
متغير النتيجة=الصفحة.العنصر("منطقةالكلمة")؛
النتيجة.المحتوى="محاولة صحيحة"؛
	}
}

مهمة نقر(المدخل){
//مطالعة(رقم_الحقل_المحدد)؛
عندما(رقم_الحقل_المحدد>=0)
{
 متغير النتيجة=الصفحة.العنصر(الحقل_المحدد)؛
النتيجة.النص=المدخل؛
متغير م=متغيرات_المهمة()؛
 م.اضافة(رقم_الحقل_المحدد)؛
 م.اضافة(المدخل)؛
//متغير التحقق= مهمةخدمة("التحقق",م.المحتوى()) ؛
متغير التحقق=الصفحة.كائن()؛
   مهمةخدمة("التحقق",م.المحتوى(),تنفيذ2) ؛
   

رقم_الحقل_المحدد=""؛
}
}
