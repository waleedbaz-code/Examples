

// التضمين
// بيانات الاتصال مع قاعدة البيانات
		متغير النوع="MYSQL"؛
		متغير الخادم="mysql5044.site4now.net"؛
		متغير اسم_المستخدم="a74d65_arabdb"؛
		متغير كلمةالسر="arabC0de"؛
		متغير قاعدةالبيانات="db_a74d65_arabdb"؛
		متغير قب = قاعدةبيانات(النوع,الخادم,اسم_المستخدم,كلمةالسر,قاعدةالبيانات)؛

مهمة التحقق (المستخدم,السر) {
	

		// إنشاء جملة تنفيذية للتعامل مع قاعدة البيانات
		متغير جملة = قب.جملةتنفيذية()؛
متغير الشرط="البريد=`" + المستخدم + "` AND كلمة_السر=`" + السر + "`"؛
		// عرض البيانات 
		متغير ج=هيكل_جسون(جملة.استرجاع("الاسم").الشرط(الشرط ).الجدول("المستخدمين").تنفيذ())؛
		
		عندما(ج.القيمة("الاسم")==غيرمحدد)
			ارجاع  "خطأ في اسم المستخدم أو كلمة السر"؛
		غيرذلك 
		ارجاع "مرحباً " + ج.القيمة("الاسم")؛
}

مهمة مستخدم_مسبق (المستخدم) {
		

		// إنشاء جملة تنفيذية للتعامل مع قاعدة البيانات
		متغير جملة = قب.جملةتنفيذية()؛
متغير الشرط="البريد=`" + المستخدم + "`"؛
		// عرض البيانات 
		متغير ج=هيكل_جسون(جملة.استرجاع("الاسم").الشرط(الشرط ).الجدول("المستخدمين").تنفيذ())؛
		
		ارجاع ج.الطول؛ 
}

مهمة تسجيل (الاسم,المستخدم,السر) {


          عندما(مستخدم_مسبق(المستخدم)>0) ارجاع "مستخدم مسجل مسبقاً"؛
		 
		 
		// إنشاء جملة تنفيذية للتعامل مع قاعدة البيانات
		متغير جملة = قب.جملةتنفيذية()؛
	
	// البيانات التي سوف يتم إضافتها
متغير ق=قاموس()؛
ق.اضافة("الاسم",الاسم)؛
ق.اضافة("البريد",المستخدم)؛
ق.اضافة("كلمة_السر",السر)؛
	


		متغير ج=جملة.اضافة(ق).الجدول("المستخدمين").تنفيذ()؛
		
		عندما(ج>0)
			ارجاع  "تم تسجيل المستخدم بنجاح"؛
		غيرذلك 
		ارجاع "خطأ في عملية التنفيذ"؛
	
}

