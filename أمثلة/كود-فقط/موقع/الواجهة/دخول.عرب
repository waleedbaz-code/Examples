مهمة تنفيذ1(القيمة){
متغير منطقة_الرسالة=الصفحة.العنصر("منطقة_الرسالة")؛
منطقة_الرسالة.المحتوى=القيمة؛
}

مهمة نقر(){
	متغير المستخدم=الصفحة.العنصر("اسم_المستخدم").النص؛
			متغير السر=الصفحة.العنصر("كلمة_السر").النص؛

متغير م=متغيرات_المهمة()؛
    م.اضافة(المستخدم)؛
    م.اضافة(السر)؛
//منطقة_الرسالة.المحتوى=( مهمةخدمة("التحقق",م.المحتوى()) )؛
 مهمةخدمة("التحقق",م.المحتوى(),تنفيذ1) ؛

}

