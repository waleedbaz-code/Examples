
مهمة تحقق_البيانات (الاسم,المستخدم,السر) {


          عندما( نص.الطول(نص.تقليم(الاسم))==0 )
		  ارجاع "الرجاء ادخال الاسم"؛
		 
		  عندما( نص.الطول(نص.تقليم(المستخدم))==0 )
		  ارجاع "الرجاء ادخال البريد الالكتروني"؛

		عندما( نص.الطول(نص.تقليم(السر))==0 )
		  ارجاع "الرجاء ادخال كلمة السر"؛
		  
//ارجاع مستخدم_مسبق (المستخدم)؛
ارجاع تسجيل(الاسم,المستخدم,السر)؛
	
}

